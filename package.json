{
  "name": "bsm",
  "private": true,
  "version": "0.1.0",
  "description": "Business Service Management monorepo",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:main": "next dev -p 3002",
    "dev:customer": "npm --workspace @bsm/customer-portal run dev",
    "dev:admin": "npm --workspace @bsm/admin-dashboard run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "start": "node start.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.7",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  }
}
